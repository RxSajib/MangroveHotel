<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/SenderLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/sender_design"
        android:padding="10dp">


        <TextView
            android:id="@+id/SenderTextID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="I am go to home"
            android:textColor="@android:color/white"
            android:textSize="13dp"

            />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/ReciverLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/reciver_design"
        android:padding="10dp">


        <TextView
            android:id="@+id/ReciverTextID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="I am go to home"
            android:textColor="@android:color/black"
            android:textSize="13dp"

            />

    </RelativeLayout>


</RelativeLayout>