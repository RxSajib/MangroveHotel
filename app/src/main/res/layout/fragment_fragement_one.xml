<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragement_one">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/imageone" />

        <TextView
            android:id="@+id/onee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="30dp"
            android:text="Welcome TO Mangrove Hotel"
            android:textColor="@android:color/white"
            android:textSize="25dp" />


        <TextView
            android:id="@+id/twotext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/onee"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Let us know about your experience"
            android:textColor="@android:color/white"
            android:textSize="20dp"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:text="please sweap to next"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

        <RelativeLayout
            android:id="@+id/LoneIDID"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/twotext"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <TextView
                android:id="@+id/processone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Check-in process"
                android:textColor="@android:color/white"
                android:textSize="18dp" />

            <RatingBar
                android:id="@+id/CheckRatingId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_toRightOf="@id/processone"
                android:numStars="5"
                android:progressBackgroundTint="@android:color/white"
                android:progressTint="#FFC107" />

        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>